<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- General styles that applies on all themes -->
    <style name="BaseTheme" parent="Theme.AppCompat.DayNight">
        <!--default font-->
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

        <!--default button style-->
        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>

        <!--common colors in both themes-->
        <item name="colorAccent">@color/orange_700</item>
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryDark">@color/blue_900</item>

        <!--color used to make gradient with colorPrimary-->
        <item name="colorPrimaryVariant">@color/blue_400</item>

        <!--primary color used for surfaces like bottom navigation-->
        <item name="colorPrimarySurface">@color/blue_700</item>

        <!--used for card-view items-->
        <item name="colorSecondary">@color/blue_400</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
    </style>

</resources>